<h2 class="text-center">
    <%= @item.name %>
</h2>
<div class="container text-right ">

    <%= link_to "< Назад" , items_path, class: "btn btn-secondary mb-4" %>
</div>
<div class="container bg-light text-right pt-4 pb-4">
    <div id="<%= dom_id @item %>">
        <p>
            <strong>Опис:</strong>
            <%= @item.description %>
        </p>
        <p>
            <strong>Ціна:</strong>
            <%= @item.price %>
        </p>
        <% if current_user %>
            <%= link_to "Купити" , items_path, class: "btn btn-success btn-lg active" %>
            |
            <%= link_to "Відрегадувати" , edit_item_path(@item), class: "btn btn-primary" %>
            |
            <%= button_to "Видалити" , @item, method: :delete, class: "btn btn-danger" , form:
                 {style: 'display:inline-block;' ,}%>
            <%else%>
            <p>Авторизуйтеся, щоб придбати</p>
            <%end%>
        </div>
    </div>
