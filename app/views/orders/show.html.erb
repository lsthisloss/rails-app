<div class="container bg-light text-right pt-2 pb-3 ">

    <p style="color: green"><%= notice %></p>

    <%= render @order %>

    <div class="input-group w-25 mb-3">
        <%= link_to "Edit" , edit_order_path(@order), class: "btn btn-primary" %>
        |
        <%= button_to "Delete" , @order, method: :delete, class: "btn btn-danger" , form:
                 {style: 'display:inline-block;' ,}%>
    </div>
    <%= link_to "Back to orders", orders_path %>
</div>
